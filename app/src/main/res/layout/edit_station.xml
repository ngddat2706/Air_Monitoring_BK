<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_comer"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:background="@drawable/left_comer"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:id="@+id/AddParameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_toLeftOf="@+id/EditStation"
        android:layout_centerVertical="true"
        />


    <ImageView
        android:id="@+id/EditStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/DeleteStation"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/DeleteStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_icon"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_toLeftOf="@+id/checkbox_station"
        android:layout_centerVertical="true"
        />

    <CheckBox
        android:id="@+id/checkbox_station"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:textColor="@color/black"
        android:focusableInTouchMode="false"
        />


    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp"
        android:paddingLeft="50dp"
        android:text="StationName"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/checkbox_station"
        />



</RelativeLayout>